<ul>
  <% if ::Refinery::Seasons::Admin::SeasonsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.seasons_admin_seasons_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_seasons_admin_season_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Seasons::Admin::SeasonsController.sortable? && ::Refinery::Seasons::Season.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Seasons"),
                 refinery.seasons_admin_seasons_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Seasons"),
                 refinery.seasons_admin_seasons_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
