<% content_for :body_content_title do %>
  <%= @season.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Year</h1>
    <p>
      <%=raw @season.year %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="seasons">
      <% @seasons.each do |season| %>
        <li>
          <%= link_to season.title, refinery.seasons_season_path(season) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
