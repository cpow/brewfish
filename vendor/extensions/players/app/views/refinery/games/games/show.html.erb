<% content_for :body_content_title do %>
  <%= @game.opponent %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @game.date %>
    </p>
  </section>
  <section>
    <h1>Opponent</h1>
    <p>
      <%=raw @game.opponent %>
    </p>
  </section>
  <section>
    <h1>Players</h1>
    <% @game.players.each do |gamed_player| %>
      <%= render :partial => 'gamed_player', :locals => {:player => gamed_player}%>
    <% end %>
  </section>
  
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="games">
      <% @games.each do |game| %>
        <li>
          <%= link_to game.opponent, refinery.games_game_path(game) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
