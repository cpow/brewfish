<% content_for :body_content_left do %>
  <ul id="players">
    <% @players.each do |player| %>
      <li>
        <ul id="player_thumb">
          <li>
            <% if player.photo %>
              <%= image_fu player.photo, "80x80" %>
            <% else %>
              <%= image_tag "empty-profile.gif", :size => "80x80" %>
            <% end %>
            <%= link_to player.name, refinery.players_player_path(player) %><li>
          </li>
        </ul>
        
      </li>
    <% end %>
  </ul>
<% end %>

<%= render '/refinery/content_page' %>
