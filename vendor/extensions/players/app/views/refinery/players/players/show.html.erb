<section id="body_content">
  <section id="body">
    <div id="player">
      <% if @player.photo %>
        <%= image_fu @player.photo, "400x400", class: "image-align-left" %>
      <% else %>
        <%= image_tag "empty-profile.gif", class: "image-align-left" %>
      <% end %>
      <h1><%= @player.name %></h1>
      <%= raw @player.bio %>
      <p class="back"><%= link_to "Back to Players", refinery.players_players_path %></p>
    </div>
  </section>
  <section>
      <h1>Totals:</h1>
      <table id="player_show_stats">
        <thead>
          <th>At Bats</th>
          <th>Hits</th>
          <th>Average</th>
          <th>Walks</th>
          <th>Singles</th>
          <th>Doubles</th>
          <th>Triples</th>
          <th>Home Runs</th>
        </thead>
        <tbody>
          <td><%= @player.sum_stats(:at_bats) %></td>
          <td><%= @player.sum_stats(:hits) %></td>
          <td><%= @player.batting_average %></td>
          <td><%= @player.sum_stats(:walks) %></td>
          <td><%= @player.sum_stats(:singles) %></td>
          <td><%= @player.sum_stats(:doubles) %></td>
          <td><%= @player.sum_stats(:triples) %></td>
          <td><%= @player.sum_stats(:home_runs) %></td>
        </tbody>
      </table>
  </section>
  <section>
    <h1>Games:</h1>
    <% @player.games.each do |game| %>
      <%=  link_to game.opponent, refinery.games_game_path(game) %>
    <% end %>
  </section>
</section>
