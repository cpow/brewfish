<ul>
  <% if ::Refinery::GamedPlayers::Admin::GamedPlayersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.gamed_players_admin_gamed_players_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_gamed_players_admin_gamed_player_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::GamedPlayers::Admin::GamedPlayersController.sortable? && ::Refinery::GamedPlayers::GamedPlayer.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Gamed Players"),
                 refinery.gamed_players_admin_gamed_players_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Gamed Players"),
                 refinery.gamed_players_admin_gamed_players_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
